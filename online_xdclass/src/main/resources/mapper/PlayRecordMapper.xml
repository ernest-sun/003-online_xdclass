<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.xdclass.online_xdclass.mapper.PlayRecordMapper">

  <!-- 通用查询映射结果 -->
  <resultMap id="BaseResultMap" type="net.xdclass.online_xdclass.model.PlayRecord">
    <id column="id" property="id"/>
    <result column="user_id" property="userId"/>
    <result column="video_id" property="videoId"/>
    <result column="current_num" property="currentNum"/>
    <result column="episode_id" property="episodeId"/>
    <result column="create_time" property="createTime"/>
  </resultMap>

  <!-- 通用查询结果列 -->
  <sql id="Base_Column_List">
    id
    , user_id, video_id, current_num, episode_id, create_time
  </sql>

  <insert id="save" useGeneratedKeys="true" keyProperty="id" keyColumn="id"
    parameterType="playRecord">
    insert into play_record(user_id,
                            video_id,
                            current_num,
                            episode_id,
                            create_time)
    values (#{userId}, #{videoId}, #{currentNum}, #{episodeId}, #{createTime})
  </insert>

</mapper>
